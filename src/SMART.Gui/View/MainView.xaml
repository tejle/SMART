    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Extensions="clr-namespace:System.Windows.Extensions"
    Title="{Binding Name}"         
    WindowStartupLocation="CenterScreen"
    Height="799" 
    Width="1138"
    Background="{StaticResource windowBackground}"
    x:Name="MainWindow">
    <Extensions:WindowChrome.WindowChrome>
        <Extensions:WindowChrome 
            RoundCorners="True"  
            RoundCornersRadius="8"              
            UseGlassFrame="False"/>
    </Extensions:WindowChrome.WindowChrome>

