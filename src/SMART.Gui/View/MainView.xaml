    <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="8"  Margin="0,0,1,1" >

        <Grid >
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <DockPanel x:Name="_NavigationRoot"
                   Margin="{Binding 
                            RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, 
                            Path=(Extensions:WindowChrome.WindowChrome).ResizeBorder}"
                    >

                <Grid DockPanel.Dock="Top">
                    <Grid.RowDefinitions>

                        <RowDefinition Height="{Binding 
                        RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, 
                        Path=(Extensions:WindowChrome.WindowChrome).CaptionHeight}"/>
                        <RowDefinition Height="*" />

                    </Grid.RowDefinitions>

                    <ContentPresenter Content="{Binding TitleBar}" Grid.Row="0" />
                    <ContentPresenter Content="{Binding MenuBar}" Grid.Row="1"  />

                </Grid>

                <ContentPresenter Content="{Binding MainContent}" />

            </DockPanel>
        </Grid>

    </Border>
</Window>
