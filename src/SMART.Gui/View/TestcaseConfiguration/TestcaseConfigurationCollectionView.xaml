<ContentControl x:Class="SMART.Gui.View.TestcaseConfiguration.TestcaseConfigurationCollectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:SlidingListBox="clr-namespace:SMART.Gui.Controls.SlidingListBox"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <SlidingListBox:SlidingListBox 
            Grid.Column="0"
            x:Name="slidingListBox"        
            ItemContainerStyle="{StaticResource slidingListBoxItemStyle}"
            SelectedItem="{Binding Path=CurrentTestcaseSetting, Mode=TwoWay}"
            IsSynchronizedWithCurrentItem="True"            
            SelectionMode="Single"
            HorizontalContentAlignment="Left" 
            SlideDirection="Right"
            SlideDistance="70"
            SlideDuration="90"
            BorderThickness="0"            
            ItemsSource="{Binding TestcaseSettings}"
            />
        <ContentControl Grid.Column="1" Content="{Binding CurrentTestcaseSetting}" />
    </Grid>
</ContentControl>
